<!DOCTYPE html>
<html lang="en">
  <script>
    
    function hello(){
      const session_dis=document.getElementById("session_dis").value;
      const pharmacy_dis=document.getElementById("pharmacy_dis").value;
      const family_dis=document.getElementById("family_dis").value;
          if(session_dis>100 || session_dis<0){
              alert("Discount should not exceed 100 and can not be negetive");
          }
          if(pharmacy_dis>100 || pharmacy_dis<0){
              alert("Discount should not exceed 100 and can not be negetive");
          }
          if(family_dis>100 || family_dis<0){
              alert("Discount should not exceed 100 and can not be negetive");
          }
      }
    
  </script>
  
<head>
  <title>Application Details</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
  <h1>Edit Pack</h1>
  <p>Name: <%= pack.Package_Name %></p>
  <p>Price: <%= pack.Price %></p>
  <p>Session_Discount: <%= pack.Session_Discount %>
  <p>Pharmacy_Discount: <%= pack.Pharmacy_Discount %></p>

  <p>Family_Discount: <%= pack.Pharmacy_Discount %>
  <!-- Add other application details here -->
  <form method="POST" action="/admin/editPack/<%= pack._id %>">
    <label for="Price">Price:</label>
    <input type="number" name="Price" value="<%= pack.Price %>"><br>
  
    <label for="Session_Discount">Session_Discount:</label>
    <input type="number" id="session_dis" name="Session_Discount" value="<%= pack.Session_Discount %>"><br>
  
    <label for="Pharmacy_Discount">Pharmacy_Discount:</label>
    <input type="number" id="pharmacy_dis" name="Pharmacy_Discount" value="<%= pack.Pharmacy_Discount %>"><br>
  
    <label for="Family_Discount">Family_Discount:</label>
    <input type="number" id="family_dis" name="Family_Discount" value="<%= pack.Family_Discount %>"><br>

    <button onclick="hello()" type="submit">Save Changes</button><br><br>
  <a href="/admin/packages">Back to Packages</a>
  </form>
</body>
</html>